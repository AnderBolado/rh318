sudo yum update -y
sudo yum install -y git
sudo yum install -y firewalld && sudo systemctl enable firewalld && sudo systemctl start firewalld && sudo firewall-cmd --add-service=dns --zone=internal --permanent && sudo firewall-cmd --change-interface=eth1 --zone=internal --permanent && sudo firewall-cmd --change-interface=eth0 --zone=external --permanent && sudo firewall-cmd --reload
rhvm=10.135.197.230 && sudo firewall-cmd --zone="external" --add-forward-port=port=80:proto=tcp:toport=80:toaddr=$rhvm --permanent
rhvm=10.135.197.230 && sudo firewall-cmd --zone="external" --add-forward-port=port=443:proto=tcp:toport=443:toaddr=$rhvm --permanent
rhvh_1=10.135.236.18 && sudo firewall-cmd --zone="external" --add-forward-port=port=9090:proto=tcp:toport=9090:toaddr=$rhvh_1 --permanent
rhvh_2=10.135.197.40 && sudo firewall-cmd --zone="external" --add-forward-port=port=9090:proto=tcp:toport=9090:toaddr=$rhvh_2 --permanent
sudo yum install -y bind bind-utils && sudo systemctl enable named
echo DNS1=127.0.0.1 | sudo tee -a /etc/sysconfig/network-scripts/ifcfg-eth1
echo DOMAIN=rhv.do | sudo tee -a /etc/sysconfig/network-scripts/ifcfg-eth1
sudo groupadd kvm -g 36 && sudo useradd vdsm -u 36 -g 36 && sudo systemctl enable nfs-server
