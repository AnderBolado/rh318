ip a
# sudo ifup eth0
ssh-keygen
cat .ssh/id_rsa
# COPY THE PRIVATE KEY TO A SAFE LOCATION
cat .ssh/id_rsa.pub
# COPY THE PUBLIC KEY TO A SAFE LOCATION
rm .ssh/id_rsa
mv .ssh/id_rsa.pub .ssh/authorized_keys
chmod 600 .ssh/authorized_keys
echo "user ALL=(ALL) NOPASSWD: ALL" | sudo tee /etc/sudoers.d/user
sudo sed -i /GRUB_TIMEOUT/s/5/1/ /etc/default/grub
sudo sed -i "/GRUB_CMDLINE_LINUX/s/rhgb quiet//" /etc/default/grub
sudo grub2-mkconfig -o /boot/grub2/grub.cfg
sudo init 0
